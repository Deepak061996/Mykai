<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <array name="initial_slider_values">
        <item>20.0</item>
        <item>70.0</item>
    </array>
    <style name="CustomRatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="colorControlActivated">#FFC107</item> <!-- Amber/Yellow -->
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFB23E</item>
        <item name="colorControlActivated">#FFB23E</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/star_full</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="TopRoundedCardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="MyKaiAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/red</item>
        <item name="android:windowTitleStyle">@style/MyKaiDialogTitle</item>
    </style>

    <style name="MyKaiDialogTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>