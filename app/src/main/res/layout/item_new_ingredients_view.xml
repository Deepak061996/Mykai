<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relTodayTimers"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:paddingHorizontal="@dimen/_2sdp"
    android:layout_marginVertical="@dimen/_2sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/laystart"
        android:layout_centerInParent="true"
        android:layout_marginStart="-30dp"
        android:background="@drawable/item_background_new">
        <View
            android:layout_width="@dimen/_25sdp"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginVertical="@dimen/_2sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:visibility="visible"
                android:layout_toLeftOf="@id/imgCheckbox"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/measure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="2 tsp"
                        android:textColor="#3C4541"
                        android:textSize="@dimen/_8sdp" />
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="whole peppercorns"
                        android:textColor="#3C4541"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Ground"
                    android:visibility="gone"
                    android:textColor="#999999"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>
            <ImageView
                android:id="@+id/imgCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                android:src="@drawable/orange_uncheck_box_images" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/laystart"
        android:layout_width="@dimen/_50sdp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_background"
        android:layout_height="@dimen/_50sdp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ingredienticon"
            app:civ_border_color="#FE9F45"
            app:civ_border_width="@dimen/_1sdp" />
    </LinearLayout>
</RelativeLayout>