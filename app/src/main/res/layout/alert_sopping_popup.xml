<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/_15sdp">

            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Want me to track your savings?"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/rlHeader"
                android:gravity="center|start"
                android:fontFamily="@font/poppins"
                android:text="Grocery store name"
                android:textSize="@dimen/_12sdp"
                android:textColor="#3C4541" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circular_edittext_bg">

                <EditText
                    android:id="@+id/edStoreName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:hint="Enter the grocery store name"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:singleLine="true"
                    android:textColor="#3C4541"
                    android:textSize="@dimen/_13sdp" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/rlHeader"
                android:gravity="center|start"
                android:fontFamily="@font/poppins"
                android:text="Cart total"
                android:textSize="@dimen/_12sdp"
                android:textColor="#3C4541" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circular_edittext_bg">

                <EditText
                    android:id="@+id/edCardTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:hint="Enter the cart total"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:singleLine="true"
                    android:textColor="#3C4541"
                    android:textSize="@dimen/_13sdp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/rlHeader"
                android:gravity="center|start"
                android:fontFamily="@font/poppins"
                android:text="Date purchased"
                android:textSize="@dimen/_12sdp"
                android:textColor="#3C4541" />

            <RelativeLayout
                android:id="@+id/relDateOfBirthType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circular_edittext_bg">

                <TextView
                    android:id="@+id/etDateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:text="mm/dd/yyyy"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:singleLine="true"
                    android:textColor="#3C4541"
                    android:textSize="@dimen/_13sdp" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/llLogoutBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tvBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/green_fill_corner_bg"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Track savings"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>


