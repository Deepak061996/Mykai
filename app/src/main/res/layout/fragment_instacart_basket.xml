<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".fragment.mainfragment.commonscreen.instacart.InstacartBasketFragment">
    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageBackIcon"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back_icon"
            app:tint="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="instacart.com"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />
        <ImageView
            android:id="@+id/imageRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/restart"
            app:tint="@color/black" />
    </RelativeLayout>
    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlHeader"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_above="@id/layBottom"/>
    <RelativeLayout
        android:id="@+id/showView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_above="@id/layBottom">
        <LinearLayout
            android:id="@+id/click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@id/showCampore"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/showCampore"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            app:cardElevation="@dimen/_5sdp"
            android:layout_alignParentBottom="true"
            android:clickable="false"
            android:focusable="false"
            app:rippleColor="@android:color/transparent"
            app:shapeAppearanceOverlay="@style/TopRoundedCardView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_20sdp">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_centerInParent="true"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:layout_alignParentTop="true"
                    android:text="Compare Basket Totals"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcyCompare"
                    android:layout_below="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_margin="@dimen/_8sdp"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layBottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="#999999"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgleft"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:src="@drawable/back_icon"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgleft"
                android:layout_toStartOf="@id/imgright"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_30sdp"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:id="@+id/imgScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/layScan"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/scanbasket"/>
                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Scan basket for\ntotal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/imgCampore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/idImgCompare"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/compare"/>
                    <TextView
                        android:id="@+id/idTextCompare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Compare\nprices"
                        android:textColor="#999999"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/imgright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/forwordicon"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>