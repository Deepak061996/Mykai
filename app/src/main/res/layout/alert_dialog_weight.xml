<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/bottom_white_health_layout">
        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_gravity="center"
            android:background="@drawable/white_health_view"/>
        <ImageView
            android:id="@+id/imageCross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:src="@drawable/baseline_close_24"
            app:tint="@color/black" />

        <LinearLayout
            android:id="@+id/layWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCross"
            android:layout_marginVertical="@dimen/_2sdp"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Height"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:textColor="#171D1B"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialIngCookRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#06C169"
            app:strokeWidth="@dimen/_1sdp"
            app:cardCornerRadius="@dimen/_20sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:id="@+id/llft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/select_helth_bg"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="ft"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llcm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/textcm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/unselect_health_bg"
                        android:paddingHorizontal="@dimen/_16sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:text="cm"
                        android:gravity="center"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#06C169"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginVertical="@dimen/_10sdp">

            <com.mykaimeal.planner.di.WeekdayTimePickerView
                android:id="@+id/weekday_time_picker_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/select_helth_bg"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:paddingVertical="@dimen/_6sdp"
            android:fontFamily="@font/poppins_medium"
            android:text="Save"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</RelativeLayout>