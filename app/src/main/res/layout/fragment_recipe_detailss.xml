                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:fontFamily="@font/poppins_medium"
                android:text=""
                android:gravity="center"
                android:textColor="#3C4541"
                android:maxLines="2"
                android:textSize="@dimen/_10sdp" />
            <TextView
