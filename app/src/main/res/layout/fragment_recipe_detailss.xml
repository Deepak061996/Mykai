                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textRecipe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/unselect_bg"
                            android:paddingHorizontal="@dimen/_16sdp"
                            android:paddingVertical="@dimen/_5sdp"
                            android:text="Recipe"
                            android:gravity="center"
                            android:fontFamily="@font/poppins"
                            android:textColor="#3C4541"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/btnConvertUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/convert_select_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#000000"
                        android:text="Convert Units"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/relIngSelectAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imgMinusValue"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/minus_food_item_icon" />

                        <TextView
                            android:id="@+id/tvValues"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:text="2 servings"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000000"
                            android:textSize="@dimen/_13sdp"/>

                        <ImageView
                            android:id="@+id/imgPlusValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_image" />


                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/relServingsPeople"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/tvSelectAllBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:padding="@dimen/_5sdp"
                            android:text="Select all"
                            android:textColor="#000000"
                            android:textSize="@dimen/_13sdp"
                            app:drawableEndCompat="@drawable/unselect_checkbox" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcyIngCookWareRecipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="@dimen/_400sdp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:drawableStart="@drawable/author_notes_icon"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="@dimen/_2sdp"
                        android:text="Author Notes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <!--       <ImageView
                        android:layout_width="wrap_content"
