<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_10sdp">
        <TextView
            android:id="@+id/textThreeWindows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="15:00 - 18:00"
            android:layout_toLeftOf="@id/layRadio"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />
        <LinearLayout
            android:id="@+id/layRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvOffTomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/poppins"
                android:text="-$1.50"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/light_green"
                android:textSize="@dimen/_10sdp" />
            <ImageView
                android:id="@+id/imgRadioSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/radio_uncheck_gray_icon" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#E8E8E8"/>
</LinearLayout>
