<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.mainfragment.profilesetting.NutritionGoalFragment">

    <RelativeLayout
        android:id="@+id/rlHeader"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageBackNutrition"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/back_icon"
            app:tint="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Nutrition Goal"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlHeader"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="General"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp">
                <ImageView
                    android:id="@+id/imagePersonIconLastName"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_protine_vector" />

                <TextView
                    android:id="@+id/textHighProtein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Macro Type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"/>



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/circular_edittext_bg">
                <TextView
                    android:id="@+id/tvHighProtein"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:layout_gravity="center|start"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_15sdp"
                    android:text="Balanced"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_12sdp"
                    app:drawableEndCompat="@drawable/drop_down_icon" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center|start">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center_vertical"
                    android:text="Supports overall health"
                    android:textColor="#828282"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="RtlSymmetry" />
                <ImageView
                    android:id="@+id/imgInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/info_icon"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="Nutrition Goals"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageCalories"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_calories_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_toEndOf="@+id/imageCalories"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Calories "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.8">
                    <ImageView
                        android:id="@+id/imgCalRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/restart"/>
                </LinearLayout>
            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="1"
               android:gravity="center"
               android:orientation="horizontal">
               <SeekBar
                   android:id="@+id/seekbarcalories"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_40sdp"
                   android:max="5000"
                   android:layout_weight="0.2"
                   android:progress="0"
                   android:progressBackgroundTint="#656564"
                   android:progressTint="#06C169"
                   android:thumb="@drawable/ic_thumb_seekbar_icon" />


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_weight="0.8">
                   <TextView
                       android:id="@+id/textCalories"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/poppins"
                       android:text="0"
                       android:textColor="#000000" />
               </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageFat"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_fat_icon" />
                    <TextView
                        android:id="@+id/textFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_toEndOf="@+id/imageFat"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Fat "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"/>
                    <TextView
                        android:id="@+id/textFatTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="(0g)"
                        android:textColor="#06C169" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.8">
                    <ImageView
                        android:id="@+id/imgFatRefresh"
                        android:layout_width="wrap_content"
                        android:visibility="gone"
                        android:layout_height="wrap_content"
                        android:background="@drawable/restart"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal">
                <SeekBar
                    android:id="@+id/seekbarFats"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:max="100"
                    android:layout_weight="0.2"
                    android:progress="0"
                    android:progressBackgroundTint="#656564"
                    android:progressTint="#06C169"
                    android:thumb="@drawable/ic_thumb_seekbar_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.8">
                    <TextView
                        android:id="@+id/tvfat"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:background="@drawable/button_bg_percentage"
                        android:text="0%"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageCarbs"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_carbs_icon" />

                    <TextView
                        android:id="@+id/textCarbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_toEndOf="@+id/imageCarbs"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Carbs "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"/>
                    <TextView
                        android:id="@+id/textCarbsTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins"
                        android:text="(0g)"
                        android:textColor="#06C169" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.8">
                    <ImageView
                        android:id="@+id/imgCarbRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/restart"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal">
                <SeekBar
                    android:id="@+id/seekbarCarbs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:max="100"
                    android:layout_weight="0.2"
                    android:progress="0"
                    android:progressBackgroundTint="#656564"
                    android:progressTint="#06C169"
                    android:thumb="@drawable/ic_thumb_seekbar_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.8">
                    <TextView
                        android:id="@+id/tvcarb"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:background="@drawable/button_bg_percentage"
                        android:text="0%"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageProtien"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_protien_icon" />

                    <TextView
                        android:id="@+id/textProtien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_toEndOf="@+id/imageProtien"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Protein "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12ssp"/>
                    <TextView
                        android:id="@+id/textProtienTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/poppins"
                        android:text="(0g)"
                        android:textColor="#06C169" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.8">
                    <ImageView
                        android:id="@+id/imgProteinRefresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:background="@drawable/restart"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal">
                <SeekBar
                    android:id="@+id/seekbarProtein"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:max="100"
                    android:layout_weight="0.2"
                    android:progress="0"
                    android:progressBackgroundTint="#656564"
                    android:progressTint="#06C169"
                    android:thumb="@drawable/ic_thumb_seekbar_icon" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="0.8">
                    <TextView
                        android:id="@+id/tvprotin"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:background="@drawable/button_bg_percentage"
                        android:text="0%"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Total (must be 100%)"
                    android:layout_weight="0.2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>
                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_alignParentEnd="true"
                    android:text="0%"
                    android:gravity="center"
                    android:layout_weight="0.8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rlUpdateButton"
                app:layout_constraintTop_toBottomOf="@+id/clCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/button_bg"
                android:gravity="center"
                android:paddingVertical="@dimen/_10sdp">
                <TextView
                    android:id="@+id/textUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Update"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>